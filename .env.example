# ============================
# ZYNIQ-CREW7 Centralized Environment Configuration (EXAMPLE)
# ============================
# Copy this file to .env and fill in your actual values
# This file contains all environment variables for the entire project
# ============================

# ============================
# SMTP Email Server
# ============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS="your-app-password"
SMTP_USER_SEND_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=YourAppName

# ============================
# Backend / Database
# ============================
DB_URL=postgresql+psycopg://crew7:crew7@localhost:5432/crew7
POSTGRES_USER=crew7
POSTGRES_PASSWORD=crew7
POSTGRES_DB=crew7
POSTGRES_PORT=5432

# ============================
# pgAdmin
# ============================
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=your-secure-password
PGADMIN_CONFIG_SERVER_MODE="False"
PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED="False"

# ============================
# Redis
# ============================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ============================
# Qdrant Vector DB
# ============================
QDRANT_URL=http://localhost:6333

# ============================
# MinIO / S3
# ============================
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=crew7-artifacts
S3_ACCESS_KEY=crew7
S3_SECRET_KEY=crew7pass
S3_SECURE=false

# ============================
# Ollama LLM
# ============================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PORT=11434
MODEL_GENERAL=llama3:instruct
MODEL_EMBED=all-minilm:latest
CREW7_MODEL_GENERAL=llama3:instruct
CREW7_MODEL_CODE=codellama:instruct
CREW7_EMBED_MODEL=all-minilm:latest

# ============================
# Application
# ============================
APP_SECRET=change-me-in-production-crew7-secret-key
WORKSPACES_ROOT=/tmp/crew7_workspaces
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================
# Observability (OpenTelemetry)
# ============================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=crew7-api

# ============================
# Internal API (for worker)
# ============================
CREW7_INTERNAL_API=http://localhost:8000

# ============================
# Stripe API Key
# ============================
STRIPE_API_KEY=sk_test_your_stripe_key_here

# ============================
# Default user credentials
# ============================
DEFAULT_USER_EMAIL=admin@crew7.ai 
DEFAULT_USER_PASSWORD=Admin@123
DEFAULT_USER_CREDITS=100000

# ============================
# OpenAI API Key
# ============================
OPENAI_API_KEY=your-openai-api-key-here

# ============================
# Gemini Configuration
# ============================
GEMINI_API_KEY=your-google-api-key-here
GEMINI_MODEL_NAME=gemini-1.5-flash  
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# ============================
# AimalAPI Configuration
# ============================
AIMALAPI_API_KEY=your-aimalapi-key-here
AIMALAPI_BASE_URL=https://api.aimalapi.com/v1
AIMALAPI_MODEL=gpt-4o-mini

# ============================
# Role-specific models (optional)
# ============================
AIMAL_BACKEND_MODEL=gpt-4o-mini
AIMAL_FRONTEND_MODEL=gpt-4o-mini
AIMAL_QA_MODEL=gpt-4o-mini
AIMAL_DEVOPS_MODEL=gpt-4o-mini
AIMAL_DATA_MODEL=gpt-4o-mini
AIMAL_SECURITY_MODEL=gpt-4o-mini

# ============================
# Frontend Configuration
# ============================
# API Configuration (Vite variables must start with VITE_)
VITE_API_URL=http://localhost:8080
VITE_API_BASE=http://localhost:8080

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8080

# Production URLs (uncomment when deploying)
# VITE_API_URL=https://api.yourdomain.com
# VITE_WS_URL=wss://api.yourdomain.com
